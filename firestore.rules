rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true ||
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Admin registry docs (managed in Firebase Console / privileged backend only)
    match /admins/{userId} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // Poems are public-readable. Admins can fully manage poems.
    // Signed-in users can only append completion metadata by updating completedUsers.
    match /poems/{poemId} {
      allow read: if true;
      allow create, delete: if isAdmin();

      allow update: if isAdmin() || (
        isSignedIn() &&
        request.resource.data.keys().hasOnly(['title', 'content', 'author', 'completedUsers']) &&
        request.resource.data.title == resource.data.title &&
        request.resource.data.content == resource.data.content &&
        request.resource.data.author == resource.data.author &&
        request.resource.data.completedUsers is list &&
        resource.data.completedUsers is list &&
        request.resource.data.completedUsers.size() >= resource.data.completedUsers.size() &&
        request.resource.data.completedUsers.size() <= resource.data.completedUsers.size() + 1
      );
    }

    // Users can read profiles while signed in (nickname lookup uses collection queries).
    // Writes are still owner-only; admin can read all for admin stats panel.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    // Centralized comments log for admin analytics.
    // Users can create their own comments; admins can read/manage all.
    match /comments/{commentId} {
      allow read: if isAdmin();
      allow create: if isAdmin() || (
        isSignedIn() &&
        request.resource.data.keys().hasOnly(['uid', 'poemId', 'comment', 'createdAt']) &&
        request.resource.data.uid == request.auth.uid &&
        request.resource.data.poemId is string &&
        request.resource.data.comment is string &&
        request.resource.data.comment.size() <= 200
      );
      allow update, delete: if isAdmin();
    }
  }
}
